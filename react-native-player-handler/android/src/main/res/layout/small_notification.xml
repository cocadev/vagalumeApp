<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/colorWhite">
    <RelativeLayout
        android:id="@+id/notification_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/notification_small_height"
        android:layout_marginLeft="@dimen/notification_margins"
        android:layout_marginRight="@dimen/notification_margins"
        android:layout_marginTop="@dimen/notification_margins_top"
        android:layout_marginBottom="@dimen/notification_margins_bottom"
        android:gravity="center"
		android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/img_content"
            android:layout_toStartOf="@+id/img_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start">
                <LinearLayout
                android:id="@+id/title_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/primaryDark"
                    android:textSize="10sp"
                    android:text="Vagalume.FM"/>

                    <TextView
                        android:id="@+id/separator"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/primaryLight"
                        android:textSize="10sp"
                        android:text=" | "/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/station_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/primary"
                        android:textSize="10sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rec_content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0"
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:background="@drawable/circle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorRed"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=" GRAVANDO..."/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/artist_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/music_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="@color/primaryDark"/>
                    <TextView
                        android:id="@+id/artist_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="11sp"
                        android:textColor="@color/primary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/buttons_content"
                        android:layout_below="@+id/artist_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <RelativeLayout
                            android:id="@+id/rec_off"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="visible">
                            <ImageButton
                                android:id="@+id/btn_rec_off"
                                android:src="@drawable/ic_rec_off"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:background="?android:selectableItemBackground"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rec_on"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="gone">
                            <ImageButton
                                android:id="@+id/btn_rec_on"
                                android:src="@drawable/ic_rec_on"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:background="?android:selectableItemBackground" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/prev"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="visible">
                            <ImageButton
                                android:id="@+id/btn_prev"
                                android:src="@drawable/backward"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:layout_marginTop="5dp"
                                android:background="?android:selectableItemBackground" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/play"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="visible">
                            <ImageButton
                                android:id="@+id/btn_play"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/play"
                                android:layout_marginTop="5dp"
                                android:adjustViewBounds="true"
                                android:paddingTop="2dp"
                                android:paddingBottom="1.8dp"
                                android:scaleType="centerInside"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:background="?android:selectableItemBackground" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/pause"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="gone" >
                            <ImageButton
                                android:id="@+id/btn_pause"
                                android:src="@drawable/pause"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:layout_marginTop="5dp"
                                android:background="?android:selectableItemBackground" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/next"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="visible">
                            <ImageButton
                                android:id="@+id/btn_next"
                                android:src="@drawable/forward"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:layout_marginTop="5dp"
                                android:background="?android:selectableItemBackground"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/close"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="gone">
                            <ImageButton
                                android:id="@+id/btn_close"
                                android:src="@drawable/close"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:layout_marginTop="5dp"
                                android:background="?android:selectableItemBackground" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/img_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/station_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
